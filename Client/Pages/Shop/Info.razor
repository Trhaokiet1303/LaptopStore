@code {
    [Inject] IJSRuntime JSRuntime { get; set; }

    private async Task ScrollToSection(string sectionId)
    {
        if (!string.IsNullOrEmpty(sectionId))
        {
            await JSRuntime.InvokeVoidAsync("scrollToSection", sectionId);
        }
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Gọi hàm JavaScript để cuộn đến phần tử nếu có #id trong URL
            await JSRuntime.InvokeVoidAsync("scrollToSectionOnLoad");
        }
    }
}

<script>
    window.scrollToSectionOnLoad = () => {
        const hash = window.location.hash.substring(1); // Lấy phần #id từ URL
        if (hash) {
            const targetElement = document.getElementById(hash);
            if (targetElement) {
                targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }
    };

    window.scrollToSection = (sectionId) => {
        const targetElement = document.getElementById(sectionId);
        if (targetElement) {
            targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
    };


</script>