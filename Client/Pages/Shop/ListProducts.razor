@page "/allproducts"
@using LaptopStore.Client.Shared.Shop;
@layout ShopLayout
@inject Microsoft.Extensions.Localization.IStringLocalizer<ListProducts> _localizer
@inject NavigationManager NavigationManager
<link href="css/listproducts.css" rel="stylesheet">



<div class="menu-bar">
    <!-- Filter panel -->
    <MudChip Class="filter-chip" OnClick="ToggleFilterPanel">
        <MudIcon Icon="@Icons.Material.Filled.FilterList" Color="Color.Primary" />
        <MudText Typo="Typo.body2" Class="filter-text">Lọc</MudText>
    </MudChip>

    <!-- Brand Chips with Logos -->
    <MudChip Class="brand-chip">
        <img Class="logo-brand" src="/images/brand/hp-icon.png" href="#" />
    </MudChip>
    <MudChip Class="brand-chip">
        <img Class="logo-brand" src="/images/brand/asus-icon.png" href="#" />
    </MudChip>
    <MudChip Class="brand-chip">
        <img Class="logo-brand" src="/images/brand/dell-icon.png" href="#" />
    </MudChip>
    <MudChip Class="brand-chip">
        <img Class="logo-brand" src="/images/brand/lenovo-icon.png" href="#" />
    </MudChip>
    <MudChip Class="brand-chip">
        <img Class="logo-brand" src="/images/brand/acer-icon.png" href="#" />
    </MudChip>
    <MudChip Class="brand-chip">
        <img Class="logo-brand" src="/images/brand/mac-icon.png" href="#" />
    </MudChip>
    <MudChip Class="brand-chip">
        <img Class="logo-brand" src="/images/brand/msi-icon.png" href="#" />
    </MudChip>
    <MudChip Class="brand-chip">
        <img Class="logo-brand" src="/images/brand/samsung-icon.png" href="#" />
    </MudChip>
</div>
    <!-- Filter Panel on the Left Side -->
<MudItem xs="12" md="3" Class="@GetFilterPanelClass()">
    <!-- Toggle Button for Filter Panel -->
    <!-- Conditionally Render Filter Panel -->
    @if (isFilterPanelVisible)
    {
        <MudPaper Class="filter-panel">
            <MudExpansionPanels>

                <!-- Brand Filter -->
                <MudExpansionPanel Text="@_localizer["Brand"]">
                    @foreach (var brand in _brands)
                    {
                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px;">
                            <MudCheckBox Checked="brand.IsSelected" T="bool" Label="@brand.Name"
                                         OnCheckedChanged="(e) => ToggleBrandSelection(brand)" />
                            <img src="@brand.LogoPath" alt="@brand.Name" class="logo-brand" />
                        </div>
                    }
                </MudExpansionPanel>

                <!-- Description Filter -->
                <MudExpansionPanel Text="@_localizer["Description"]">
                    @foreach (var description in _descriptions)
                    {
                        <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px;">
                            <MudCheckBox Checked="description.IsSelected" T="bool" Label="@description.Name"
                                         OnCheckedChanged="(e) => ToggleDescriptionSelection(description)" />
                            <img src="@description.DescriptionPath" alt="@description.Name" class="logo-description" />
                        </div>
                    }
                </MudExpansionPanel>

                <!-- Price Filter -->
                <MudExpansionPanel Text="@_localizer["Price"]">
                    <MudRadioGroup T="string" @bind-SelectedValue="SelectedPriceRange" OnChange="(e) => ApplyFilters()">
                        <MudRadio T="string" Value="all">Tất cả</MudRadio><br />
                        <MudRadio T="string" Value="under10">Dưới 10 triệu</MudRadio><br />
                        <MudRadio T="string" Value="10to15">Từ 10 - 15 triệu</MudRadio><br />
                        <MudRadio T="string" Value="15to20">Từ 15 - 20 triệu</MudRadio><br />
                        <MudRadio T="string" Value="20to25">Từ 20 - 25 triệu</MudRadio><br />
                        <MudRadio T="string" Value="25to30">Từ 25 - 30 triệu</MudRadio><br />
                        <MudRadio T="string" Value="over30">Trên 30 triệu</MudRadio><br />
                    </MudRadioGroup>
                </MudExpansionPanel>

                <!-- Rate Filter -->
                <MudExpansionPanel Text="@_localizer["Rate"]">
                    <MudRadioGroup T="string" @bind-SelectedValue="SelectedRateRange" OnChange="(e) => ApplyFilters()">
                        <MudRadio T="string" Value="all">Tất cả</MudRadio><br />
                        <MudRadio T="string" Value="4andAbove">4 sao trở lên</MudRadio><br />
                        <MudRadio T="string" Value="3andAbove">3 sao trở lên</MudRadio><br />
                        <MudRadio T="string" Value="2andAbove">2 sao trở lên</MudRadio><br />
                        <MudRadio T="string" Value="1andAbove">1 sao trở lên</MudRadio><br />
                    </MudRadioGroup>
                </MudExpansionPanel>

            </MudExpansionPanels>

            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ApplyFilters">Áp dụng lọc</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="ClearFilters">Xóa bộ lọc </MudButton>
        </MudPaper>
    }
</MudItem>

<div class="main-container">

@if (!_loaded)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="false" />
}
else if (_pagedData != null && _pagedData.Any())
{
        <MudGrid GutterSpacing="3" Class="product-grid">
            @foreach (var context in _pagedData)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <!-- Điều chỉnh số lượng hiển thị trên mỗi dòng -->
                    <MudCard Class="product-card">
                        <MudCardContent>
                            <div class="badge-container">
                                <MudText Typo="Typo.overline" Class="badge">Trả góp 0%</MudText>
                                <MudText Typo="Typo.overline" Class="badge">Giá rẻ quá</MudText>
                            </div>
                            <MudButton Class="product" @onclick="() => InvokeModal(context.Id)">
                                <img class="img-product" src="@(context.ImageDataURL)" Square="true" />
                            </MudButton>
                            <MudText Typo="Typo.h6" Class="product-name">@context.Name</MudText>

                            <div class="specs">
                                <MudText Typo="Typo.body2" Class="spec">@context.Ram.Split(' ').FirstOrDefault() GB</MudText>
                                <MudText Typo="Typo.body2" Class="spec">@context.Rom.Split(' ').FirstOrDefault() GB</MudText>
                            </div>
                            <MudText Typo="Typo.body2" Class="product-details">
                                Màn hình: @context.Screen<br />
                                CPU: @context.CPU<br />
                                Card: @context.Card<br />
                                Pin: @context.Battery<br />
                                Khối lượng: @context.Weight
                            </MudText>
                            <div class="price-container">
                                <MudText Typo="Typo.h6" Class="price">@context.Price.ToString("N0") đ</MudText>
                                <MudText Typo="Typo.caption" Class="original-price">@((context.Price * 1.14).ToString("N0")) đ</MudText>
                            </div>
                            <MudRating Value="@context.Rate" ReadOnly="true" Icon="@Icons.Material.Filled.Star" Class="rate" />
                        </MudCardContent>

                        <MudButton Variant="Variant.Filled" OnClick="() => NavigateToProductDetail(context.Id)" Color="Color.Primary" Class="action-button">
                            Xem chi tiết
                        </MudButton>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>

}
</div>
